generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Endpoint {
  id        Int        @id @default(autoincrement())
  name      String?    @unique
  token     String     @unique
  createdAt DateTime   @default(now())
  responses Response[] // many to one relationship
}

model Response {
  id         Int      @id @default(autoincrement())
  method     String
  headers    String
  body       String
  receivedAt DateTime @default(now())
  ipAddress  String?

  endpointId Int // id which shows which endpoint it belongs to
  endpoint   Endpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade) // many to one relationship
}
